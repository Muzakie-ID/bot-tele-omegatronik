# Docker Environment Configuration
# Copy this file to .env before running docker-compose

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Omega Tronik H2H Configuration
OMEGA_MEMBER_ID=OX9999
OMEGA_PIN=1234
OMEGA_PASSWORD=your_password_here
OMEGA_ENDPOINT=https://apiomega.id/
OMEGA_ENDPOINT_BACKUP=http://188.166.178.169:6969/

# Admin Telegram User IDs (comma separated)
ADMIN_IDS=123456789,987654321

# Webhook Configuration (Optional)
# Set WEBHOOK_MODE=true untuk menggunakan webhook instead of polling
WEBHOOK_MODE=false
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_PORT=8095

# Database
DB_PATH=/app/database/bot.db

# Environment
NODE_ENV=production
